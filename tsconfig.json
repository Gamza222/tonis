{
  "compilerOptions": {
    "outDir": "./dist/",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strict": true,
    "sourceMap": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "es6",
    "lib": ["es6", "dom"],
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "./config/jest",
    "./config/build",
    "webpack.config.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./config/**/*",
    "src/blocks/Landing/Section1/ui/Section1Title/Section1Title.tsx"
  ],
  "exclude": ["node_modules"]
}
